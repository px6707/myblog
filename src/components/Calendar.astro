---
// Calendar.astro
const now = new Date();
const day = now.getDate();
const month = now.toLocaleString('zh-CN', { month: 'long' });
const weekday = now.toLocaleString('zh-CN', { weekday: 'long' });
const year = now.getFullYear();
---

<div class="calendar-card onload-animation rounded-3xl bg-[var(--card-color)] p-3" 
     style="animation-delay: calc(var(--onload-animation-delay) + 0.5 * var(--onload-animation-interval));">
  <div class="calendar-header text-center text-[var(--primary-color)] font-medium">
    {year}å¹´ {month}
  </div>
  <div class="calendar-day flex justify-center items-center my-2">
    <span class="text-5xl font-bold text-[var(--text-color)]">{day}</span>
  </div>
  <div class="calendar-footer text-center text-[var(--text-color-lighten)]">
    {weekday}
  </div>
</div>

<style>
  .calendar-card {
    transition: transform 0.3s ease;
  }
  .calendar-card:hover {
    transform: translateY(-3px);
  }
</style>